
@import url(/css/init.css); 

.header {
    background: url(/images/toprbg.jpg);
    background-size: 100% 100%;
}

.logo {
    float: left;
}

.user_info {
    float: right;
    margin: 15px 20px 0 0;
    color: #ffffff; 
    font-size: 12px;
}

.user_info a {
    float: right;
    color: #ffffff; 
    text-decoration: none;
}

.menu {
    text-align: center;
}

.menu ul {
    list-style: none;
    display: inline-table;
}

.menu ul li {
    float: left;
}
.menu ul li:hover {
    background: #88ccff;
}

.menu ul li:hover a {
   color: #000000; 
}

.menu ul li a {
    display: block; 
    padding: 30px 30px;
    color: #ffffff;
}

.content {
    width: 100%;
    height: 500px;
}

.tree_list {

    overflow-x: hidden;
    overflow-y: scroll;
    float: left;;

    width: 200px;
    height: 500px;
}

.tree_list a {
    text-decoration: none;
}

.data {
    width: 80%;
    float: left;;
}




